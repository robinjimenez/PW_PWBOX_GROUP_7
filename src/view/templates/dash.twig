{% extends "base.twig" %}
{% block title %}PWbox - Dashboard{% endblock %}
{% block content %}
    <div class="hero is-medium is-light is-bold">
        <div class="hero-body">
            <div class="container">
                <h2 class="title is-centered">dashboard</h2>
                {% if errors is empty and isPost %}
                    <div class="notification is-success">
                        <button class="delete"></button>
                        <p>All the files have been uploaded successfully!</p>
                    </div>
                {% endif %}
                {% for error in errors %}
                    <div class="notification is-danger">
                        <button class="delete"></button>
                        <p>{{ error }}</p>
                    </div>
                {% endfor %}
                <div id="newFileModal" class="modal">
                    <div class="modal-background" onclick="close()"></div>
                    <div class="modal-card">
                        <div class="">
                            <header class="modal-card-head">
                                <p class="subtitle">add a new file</p>
                            </header>
                            <section class="modal-card-body">
                                <form action="/dashboard{{ currentFolder }}" enctype="multipart/form-data" method="POST">
                                    <div class="control">
                                        <div class="file has-name is-boxed is-primary">
                                            <label class="file-label">
                                                <input id="file" class="file-input" type="file" name="files[]" multiple="multiple">
                                                <span class="file-cta">
                                                        <span class="file-icon">
                                                            <i class="fas fa-upload"></i>
                                                        </span>
                                                        <span class="file-label">
                                                            choose a file
                                                        </span>
                                                    </span>
                                                <span id="filename" class="file-name"></span>
                                            </label>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="control">
                                        <input class="button is-primary" type="submit" name="newFile" value="Upload">
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>
                    <button class="modal-close is-large" aria-label="close" onclick="close()"></button>
                </div>

                <div id="newFolderModal" class="modal">
                    <div class="modal-background" onclick="close()"></div>
                    <div class="modal-card">
                        <div class="">
                            <header class="modal-card-head">
                                <p class="subtitle">add a new folder</p>
                            </header>
                            <section class="modal-card-body">
                                <form action="/dashboard{{ path }}" method="POST">
                                    <div class="control">
                                        <input class="input is-primary" type="text" name="folder" placeholder="New folder name">
                                    </div>
                                    <br>
                                    <div class="control">
                                        <input class="button is-primary" type="submit" name="newFolder" value="Create">
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>
                    <button class="modal-close is-large" aria-label="close" onclick="close()"></button>
                </div>

                <div class="box">
                    <div class="level">
                        <h2 class="subtitle has-text-weight-bold"> {% if folder == root %} {{ root }}'s files {% else %} {{ folder }} {% endif %}</h2>
                        <div class="field is-grouped is-grouped-right">
                            <p class="control">
                                <a id="newFolder" class="button is-primary is-outlined">
                                        <span class="icon is-small">
                                            <i class="fas fa-plus"></i>
                                        </span>
                                    <span class="has-text-weight-bold">new folder</span>
                                </a>
                            </p>
                            <p class="control">
                                <a id="newFile" class="button is-primary">
                                        <span class="icon is-small">
                                            <i class="fas fa-upload"></i>
                                        </span>
                                    <span class="has-text-weight-bold">upload file</span>
                                </a>
                            </p>
                            {% if folder != root %}
                                <p class="control">
                                    <a class="button is-outlined is-gray" href="{{ upPath }}">
                                                <span class="icon is-small">
                                                    <i class="fas fa-level-up-alt"></i>
                                                </span>
                                        <span class="has-text-weight-bold">back</span>
                                    </a>
                                </p>
                            {% endif %}
                        </div>
                    </div>
                    <div class="box">
                        {% if path == root %}
                            <div class="level">
                                <div class="container">
                                    <div class="box">
                                        <a class="subtitle is-vcentered" href="/dashboard{{ path }}"> shared folders </a>
                                        <div class="field is-grouped is-grouped-right is-pulled-right">
                                            <p class="control">
                                                <a class="button is-success" href="/dashboard{{ path }}">
                                                    <span>open</span>
                                                </a>
                                            </p>
                                            <p class="control">
                                                <a class="button is-primary">
                                                    <span class="icon is-small">
                                                        <i class="fas fa-edit"></i>
                                                    </span>
                                                    <span>rename</span>
                                                </a>
                                            </p>
                                            <p class="control">
                                                <a class="button is-danger">
                                                    <span class="icon is-small">
                                                        <i class="fas fa-times"></i>
                                                    </span>
                                                    <span>delete</span>
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        {% if files is empty %}
                            <p class="has-text-centered has-text-weight-bold"> there are no files in this folder </p>
                        {% endif %}
                        {% for file in files %}
                            <div class="level">
                                <div class="container">
                                    <div class="box">
                                        <a class="subtitle is-vcentered" {% if file["type"] == "folder" %} href="/dashboard{{ path }}" {% endif %}> {{ file['name'] }} </a>
                                        <div class="field is-grouped is-grouped-right is-pulled-right">
                                            {% if file["type"] == "file" %}
                                                <p class="control">
                                                    <a class="button is-success">
                                                        <span>download</span>
                                                    </a>
                                                </p>
                                            {% endif %}
                                            {% if file["type"] == "folder" %}
                                                <p class="control">
                                                    <a class="button is-success" href="/dashboard{{ path ~ "/" ~ file["name"] }}">
                                                        <span>open</span>
                                                    </a>
                                                </p>
                                            {% endif %}
                                            <p class="control">
                                                <a class="button is-primary">
                                                    <span class="icon is-small">
                                                        <i class="fas fa-edit"></i>
                                                    </span>
                                                    <span>rename</span>
                                                </a>
                                            </p>
                                            <p class="control">
                                                <a class="button is-danger">
                                                    <span class="icon is-small">
                                                        <i class="fas fa-times"></i>
                                                    </span>
                                                    <span>delete</span>
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

    {% block scripts %}
        <script defer src="{{ base_url }}/assets/js/dash_script.js"></script>
    {% endblock %}